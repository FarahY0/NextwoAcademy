@model RegisterViewModel
@{
    Layout = null;
}

<!DOCTYPE html>


<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Register</title>

    <!-- Font Icon -->
    <link rel="stylesheet" href="~/NewCss/fonts/material-icon/css/material-design-iconic-font.min.css">

    <!-- Main css -->
    <link rel="stylesheet" href="~/NewCss/css/style.css">
</head>
<body>

    <div class="main">

        <!-- Sign up form -->
        <section class="signup">
            <div class="container">
                <div class="signup-content">
                    <div class="signup-form">
                        <h2 class="form-title">Create Your Account</h2>
                        <form method="POST" class="register-form" id="register-form" asp-action="Register" asp-controller="Account">
                            <div class="form-group">
                                <label asp-for="UserName"><i class="zmdi zmdi-account material-icons-name"></i></label>
                                <input asp-for="UserName" placeholder="Your Name" />
                                <span class="text-danger" asp-validation-for="UserName"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Email"><i class="zmdi zmdi-email"></i></label>
                                <input asp-for="Email" placeholder="Your Email" />
                                <span class="text-danger" asp-validation-for="Email"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Password"><i class="zmdi zmdi-lock"></i></label>
                                <input asp-for="Password" placeholder="Password" />
                                <span class="text-danger" asp-validation-for="Password"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="ConfirmPassword"><i class="zmdi zmdi-lock-outline"></i></label>
                                <input asp-for="ConfirmPassword" placeholder="Repeat your password" />
                                <span class="text-danger" asp-validation-for="ConfirmPassword"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Address"><i class="zmdi zmdi-email"></i></label>
                                <input asp-for="Address" placeholder="Your Address" />
                                <span class="text-danger" asp-validation-for="Address"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Mobile"><i class="zmdi zmdi-confirmation-number"></i></label>
                                <input asp-for="Mobile" placeholder="Your Mobile number" />
                                <span class="text-danger" asp-validation-for="Mobile"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="RoleId"></label>
                                <select asp-for="RoleId" asp-items="@ViewBag.Roles" class="form-control">
                                    <option value="-1">--Select Role --</option>
                                </select>
                                <span class="text-danger" asp-validation-for="RoleId"></span>
                            </div>

                            <div class="form-group form-button">
                                <input type="submit" name="signup" id="signup" class="form-submit" value="Create New Account" />

                            </div>
                            
                        </form>
                    </div>
                    <div class="signup-image">
                        <figure><img src="~/NewCss/images/signup-image.jpg" alt="sing up image"></figure>
                        
                    </div>
                </div>
            </div>
        </section>

        <!-- Sing in  Form -->
        

    </div>

    <!-- JS -->
    <script src="~/NewCss/vendor/jquery/jquery.min.js"></script>
    <script src="~/NewCss/js/main.js"></script>
</body><!-- This templates was made by Colorlib (https://colorlib.com) -->
</html>
