@model IEnumerable<Article>
<!-- Latest blog -->
<section id="aa-latest-blog">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="aa-latest-blog-area">
                    <div class="aa-title">
                        <h2>Latest Articles</h2>
                        <span></span>
                        <p>Be Happy With Us</p>
                    </div>
                   
                        <div class="aa-latest-blog-content">
                            <div class="row">

                                <!-- start single blog -->
                                <!-- start single blog -->
                                @foreach (var item in Model)
                                {

                                    <div class="col-md-4">
                                        <article class="aa-blog-single">
                                            <figure class="aa-blog-img">
                                                <a asp-action="Articles" asp-controller="Home"><img src="@Url.Content(item.ArticleImg)" alt="img"></a>
                                                <span class="aa-date-tag">@item.PublishDate</span>
                                            </figure>
                                            <div class="aa-blog-single-content">
                                                <h3><a asp-action="Articles" asp-controller="Home" >@item.ArticleTitle</a></h3>
                                                <p>@item.ArticleDesc.Substring(1,200)</p>
                                                <div class="aa-blog-single-bottom">
                                                    <a href="#" class="aa-blog-author"><i class="fa fa-user"></i>@item.UserName</a>

                                                </div>
                                            </div>
                                        </article>
                                    </div>
                                }

                                    <!-- start single blog -->

                                </div>
                        </div>
                  
                    </div>
            </div>
        </div>
    </div>
</section>
<!-- / Latest blog -->
