@model Nextwo.Models.Menu

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/Dashboard/Views/Shared/DashbordLayout.cshtml";
}

<h2>Edit</h2>

<h4>Menu</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="MenuId" />
            <div class="form-group">
                <label asp-for="MenuTitle" class="control-label"></label>
                <input asp-for="MenuTitle" class="form-control" />
                <span asp-validation-for="MenuTitle" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MinuSubTitle" class="control-label"></label>
                <input asp-for="MinuSubTitle" class="form-control" />
                <span asp-validation-for="MinuSubTitle" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MenuUrl" class="control-label"></label>
                <input asp-for="MenuUrl" class="form-control" />
                <span asp-validation-for="MenuUrl" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CreationDate" class="control-label"></label>
                <input asp-for="CreationDate" class="form-control" />
                <span asp-validation-for="CreationDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="IsDeleted" /> @Html.DisplayNameFor(model => model.IsDeleted)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="IsActive" /> @Html.DisplayNameFor(model => model.IsActive)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-warning" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

