@model IEnumerable<Nextwo.Models.Slider>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Dashboard/Views/Shared/DashbordLayout.cshtml";
}

<h2>Index</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
           
            <th>
                @Html.DisplayNameFor(model => model.SliderImg)
            </th>
          
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            
            <td>
                <img src="@Url.Content(item.SliderImg)" alt="insimg" Style="width:100px;height:100px" />

            </td>
            
            <td>
                <a asp-action="Edit" asp-route-id="@item.SliderId"    class="btn btn-warning">Edit</a>
                <a asp-action="Details" asp-route-id="@item.SliderId" class="btn btn-success">Details</a>
                <a asp-action="Delete" asp-route-id="@item.SliderId"  class="btn btn-dark"    >Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
