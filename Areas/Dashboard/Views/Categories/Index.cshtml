@model IEnumerable<Nextwo.Models.Category>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Dashboard/Views/Shared/DashbordLayout.cshtml";
}

<h2>Index</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CategoryName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreationDate)
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CategoryName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreationDate)
            </td>
         
            <td>
                <a asp-action="Edit" asp-route-id="@item.CategoryId" class="btn btn-warning">Edit</a>
                <a asp-action="Details" asp-route-id="@item.CategoryId" class="btn btn-success">Details</a>
                <a asp-action="Delete" asp-route-id="@item.CategoryId" class="btn btn-dark">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
